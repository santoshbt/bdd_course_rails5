<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<%flash.each do |k,m| %>
		<div class="text-center alert alert- <%= k == 'notice'? 'success' : 'danger' %>">
			<%=m%>
		</div>
	<% end %>
    <%= yield %>
  </body>
</html>
